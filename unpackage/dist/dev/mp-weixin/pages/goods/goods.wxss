.hot_list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.hot_list .hot_item {
  background-color: #fff;
  width: 42%;
  margin: 10rpx 0 8rpx 15rpx;
  padding: 20rpx;
}
.hot_list .hot_item .hot_img {
  width: 200rpx;
  height: 300rpx;
  padding-left: 50%;
  -webkit-transform: translateX(-100rpx);
          transform: translateX(-100rpx);
}
.hot_list .hot_item .hot_img image {
  width: 100%;
  height: 100%;
  border: 1px solid red;
}
.hot_list .hot_item .hot_price {
  margin-top: 10rpx;
}
.hot_list .hot_item .hot_price .sell_price {
  color: #b50e30;
}
.hot_list .hot_item .hot_price .market_price {
  color: #ccc;
  font-size: 20rpx;
  margin-left: 20rpx;
  text-decoration: line-through;
}
.hot_list .hot_item .hot_text {
  font-size: 30rpx;
  font-weight: 500;
}


